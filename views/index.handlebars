<div class="container">
  <div class="row">
    <div class="col-3">

      <h3> Time to Eat!</h3>

      <ul>
        {{#each burger}}
        {{#if eaten}}
        {{> burgers/burgers-block eaten=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-3">
      <h3> In My Belly! </h3>

      <ul>
        {{#each burger}}
        {{#unless eaten}}
        {{> burgers/burgesr-block eaten=true}}
        {{/unless}}
        {{/each}}
      </ul>